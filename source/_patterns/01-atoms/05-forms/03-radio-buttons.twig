<form action="#">
  <fieldset>

    <legend>Radio <abbr title="Required">*</abbr></legend>

    <div class="form-check">
      <label class="form-check-label" for="radio1" >
        <input class="form-check-input" id="radio1" name="radio" type="radio" checked="checked" >
        Choice A
      </label>
    </div>

    <div class="form-check">
      <label class="form-check-label" for="radio2" >
        <input class="form-check-input" id="radio2" name="radio" type="radio" >
        Choice B
      </label>
    </div>

    <div class="form-check disabled">
      <label class="form-check-label" for="radio3" >
        <input class="form-check-input" id="radio3" name="radio" type="radio" disabled>
        Choice C
      </label>
    </div>

  </fieldset>
</form>
